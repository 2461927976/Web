<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>登陆</title>
</head>
<body>
	<h1>请登陆</h1>
	<div> 
		<p>登陆名：<input type="text" id="username"></p>
		<p>密码：<input type="password" id="password"></p>
		<p><input type="submit" value="登陆" id="login"></p>
	</div>
	<script type="text/javascript" src="/js/jquery-1.11.2.min.js"></script>
	<script type="text/javascript">
		//用ajax提交表单
		$("#login").click(function(){
			$.post("/dologin",{
				"dengluming":$("#username").val(),
				"mima":$("#password").val()
			},function(result){
				if (result == 1) {
					alert("登陆成功");
				}else{
					if (result == "-2") {
						alert("没有这个用户");
					}
					if (result == "-1") {
						alert("密码错误");
					}
				}
			})
		})
	</script>
</body>
</html>